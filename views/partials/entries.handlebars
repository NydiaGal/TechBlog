<section class="container">
  <h3 class="blog-section">{{blog.section}}</h3>
  <!-- Without the custom helper, the entire timestamp is printed -->
  <h4>Blog entry date: {{helpers.format_date(blog.starting_date)}}</h4>
  <!-- Using a custom helper 'format_time', the time has been formatted -->
  <h4>Blog edited on: {{helpers.format_date(blog.ending_date)}}</h4>
  <section class="flex-row justify-center">
    {{#each blog.entries as |entry|}}
    {{> blog-details}}
    {{/each}}
  </section>
</section>